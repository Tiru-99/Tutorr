{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "JWT_SECRET",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_URL",
        "RAZORPAY_SECRET_KEY",
        "RAZORPAYX_ACCOUNT_NUMBER",
        "RAZORPAYX_SECRET",
        "RAZORPAYX_KEY_ID",
        "RAZORPAY_KEY",
        "DATABASE_URL"
      ]
    },
    
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}