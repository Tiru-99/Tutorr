/src
│
├── /api                    # Next.js API routes
│   ├── /booking
│   │   └── route.ts        # Booking API (calls job queue)
│   ├── /payment
│   │   └── route.ts        # Payment webhook or trigger
│   ├── /notification
│   │   └── route.ts        # Manual or trigger-based notifications
│
├── /jobs                   # All BullMQ job definitions & processors
│   ├── /booking
│   │   ├── queue.ts        # Booking queue setup
│   │   └── worker.ts       # Booking job processor
│   ├── /payment
│   │   ├── queue.ts
│   │   └── worker.ts
│   ├── /notification
│   │   ├── queue.ts
│   │   └── worker.ts
│   └── /cron
│       ├── /reminders
│       │   └── worker.ts   # Cron for reminders
│       └── /dailySummary
│           └── worker.ts   # Cron for daily job
│
├── /lib
│   ├── redis.ts            # Redis client setup
│   ├── bullmq.ts           # Shared BullMQ setup (connection)
│   ├── logger.ts           # Optional: pino or winston logger
│   ├── zodSchemas.ts       # Zod input/output validation
│   └── utils.ts            # Any helper functions
│
├── /services
│   ├── booking.ts          # Booking business logic
│   ├── payment.ts          # Payment logic
│   ├── notification.ts     # Notification logic (email/sms)
│   └── lock.ts             # Redis Lua scripts / Locking logic
│
├── /types
│   └── index.ts            # TypeScript types for jobs, data models, etc.
│
└── /scripts
    └── start-workers.ts    # Entrypoint for running workers (used in Docker)
